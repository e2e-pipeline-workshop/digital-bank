<!-- The contents of this file will be loaded for each web application -->
<Context>

	<Resources cachingAllowed="true" cacheMaxSize="100000"/>

    <!-- Default set of monitored resources. If one of these changes, the    -->
    <!-- web application will be reloaded.                                   -->
    <WatchedResource>${catalina.base}/conf/digitalbank.properties</WatchedResource>

	<!-- Default application properties for the deployment. These properties allow digital bank
	and digital credit to run together within the same Tomcat container instance -->
	<Parameter name="spring.jmx.default-domain" value="bank" />
	<Parameter name="server.servlet.context-path" value="/bank" />
    <Parameter name="spring.config.location" value="${catalina.base}/conf/digitalbank.properties" />
    <Parameter name="logging.file" value="${catalina.base}/logs/digitalbank.log" />

    <!-- Uncomment this to disable session persistence across Tomcat restarts -->
    <!--
    <Manager pathname="" />
    -->
</Context>
